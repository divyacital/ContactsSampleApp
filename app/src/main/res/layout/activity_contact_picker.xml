<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactPickerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/pick_contact"
            android:text="@string/pick_contact_btn_text"
            android:textColor="@color/white"
            android:layout_margin="20sp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="20sp"
            android:text="@string/contact_name_text" />
        <TextView
            android:id="@+id/contact_name_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:padding="10dp"
            android:textSize="24dp"
            android:hint="@string/contact_placeholder"
            android:textAlignment="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>